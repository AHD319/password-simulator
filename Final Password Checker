import string
import time
special_characters = string.punctuation
password = input("enter password: ")
def check_length():
    global password
    while True:
        if len(password) <= 12:
            print("Password is too short, try again")
            password = input("enter password: ")

        elif len(password) > 20:
            print("Password length too long, you would probably forget ❌")
            password = input("enter password: ")

        else:
            print(f"Password length is {len(password)}, exceptional length ✅")
            break


def check_letters():
    letter_count = 0
    global password
    while True:
        for letter in password:
            if letter.isalpha():
                letter_count += 1

        if letter_count >= 2:
            print("Password has more than 2 letters ✅")
            break

        else:
            print("Password has none or less than 2 letters, try again ❌")
            password = input("enter password: ")
            check_length()
            check_letters()

def check_numbers():
    number_count = 0
    global password
    while True:
        for letter in password:
            if letter.isdigit():
                number_count += 1

        if number_count >= 2:
            print("Password has more than 2 numbers ✅")
            break

        else:
            print("Password has none or less than 2 numbers, try again ❌")
            password = input("enter password: ")
            check_length()
            check_letters()




def check_special_characters():
    global password
    num_of_special_characters = 0
    while True:
        for letter in password:
            if letter in special_characters:
                num_of_special_characters += 1
        if num_of_special_characters >= 2:
            print("Password has more than 2 special characters ✅")
            break
        else:
            print("Password has none or less than 2 special characters, try again ❌")
            password = input("enter password: ")
            check_length()
            check_special_characters()
check_length()
check_letters()  # calling all functions to be able to start typing and testing password
check_numbers()
check_special_characters()


